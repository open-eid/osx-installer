<installer-gui-script minSpecVersion="2">
    <title>SU_TITLE</title>
    <allowed-os-versions>
        <os-version min="10.10"/>
    </allowed-os-versions>
    <options customize="never" require-scripts="false" rootVolumeOnly="true" hostArchitectures="x86_64"/>
    <background file="background.png"/>
    <localization>
        <strings language="en">
<![CDATA[
